<link href="~/Custom/css/Login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<body>
    <script>
        function Redirect(name) {
            alert(name);
            window.location.href = '/User/Login'
        }
    </script>
    <div class="common-login">

        <div class="wrapper-resetpassword">

            <header>Forget Password Recovery</header><br />

            @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @id = "resetpass-form" }))
            {
                @Html.AntiForgeryToken()

                <div class="forgotpassword-text-success">
                    @if (ViewBag.message != null)
                    {
                        <script>Redirect('@ViewBag.message')</script>
                    }
                </div>

                <div class="field password">
                    <div class="input-area">
                        <input id="password1" name="NewPassword" type="password" placeholder="Enter Password" class="input-area-field">
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })<br />
                        <i class="icon fas fa-lock"></i>
                        <i class="show-btn fas fa-eye" id="show-pass"></i>
                    </div>
                </div>

                <div class="field password">
                    <div class="input-area">
                        <input id="password2" type="password" name="ConfirmPassword" placeholder="Confirm Password" class="input-area-field">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        <i class="icon fas fa-lock"></i>
                        <i class="show-btn fas fa-eye" id="show-confirm-pass"></i>
                    </div>
                </div>

                @Html.HiddenFor(a => Model.ResetCode)

                <input type="submit" value="Reset Password" class="input-area-field">
            }
        </div>

    </div>
    <script src="~/Custom/js/Register.js"></script>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
