
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_MentorLayout.cshtml";
}

<h2>Profile</h2>

@Html.ActionLink("Home", "Index", "Student")
<h2>Profile</h2>

@Html.ActionLink("Personal Information", "PersonalInfo", "Mentor", new { @class = "personal-info" });
@Html.ActionLink("Your Profile Picture", "Avatar", "Mentor", new { @class = "profile-picture" });
@Html.ActionLink("ChangePassword", "ChangePassword", "Mentor", new { @class = "change-password" })

<div id="mycodes"></div>

<script>

    $("#mycodes").load('@Url.Action("PersonalInfo", "Mentor")');

    $('.personal-info').on('click', function () {
        $.ajax({
            type: "GET",
            url: '/Mentor/PersonalInfo',
            success: function (data, textStatus, jqXHR) {
                $('#mycodes').html(data);
            }
        });
    });

    $('.profile-picture').on('click', function () {
        $.ajax({
            type: "GET",
            url: '/Mentor/ProfilePicture',
            success: function (data, textStatus, jqXHR) {
                $('#mycodes').html(data);
            }
        });
    });

    $('.change-password').on('click', function () {
        $.ajax({
            type: "GET",
            url: '/Mentor/ChangePassword',
            success: function (data, textStatus, jqXHR) {
                $('#mycodes').html(data);
            }
        });
    });
</script>

