                formDiv.html(response);

                Popup = formDiv.dialog({
                autoOpen: true,
                resizable: true,
                title: 'FEE APPLICATION',
                height: dialogHeight,
                width: dialogWidth,
                show: { effect: 'drop', direction: "up" },
                modal: true,
                draggable: true,
                close: function () {
                Popup.dialog('destroy').remove();
                }

                });
            });
    }

