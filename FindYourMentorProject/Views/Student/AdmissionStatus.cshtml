    function SubmitFeeAppln(form) {
        let formData = new FormData(form);
        mode = formData.get("PaymentMode");
        if (mode == "Online") {
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    beforeSend: function () {
                        Popup.dialog('close');
                        $("#loader").show();
                    },
                    complete: function () {
                        $("#loader").hide();
                    },
                    success: function (data) {
                        if (data.success) {
                            window.location = "/Student/FeeProcessed";
                            dataTable.ajax.reload();
                        }
                    }
                });
            }
        }
        else {
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    beforeSend: function () {
                        Popup.dialog('close');
                        $("#loader1").show();
                    },
                    complete: function () {
                        $("#loader1").hide();
                    },
                    success: function (data) {
                        if (data.success) {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                            dataTable.ajax.reload();
                        }
                    }
                });
            }
        }


        return false;
    }

