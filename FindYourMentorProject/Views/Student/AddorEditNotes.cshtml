            <input placeholder="Give a title" data-val="true" data-val-minlength="Atleast 3 characters are expected" data-val-minlength-min="3" data-val-required="Title required" id="Title" name="Title" type="text" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="Title" data-valmsg-replace="true"></span>
        </div>

        <div class="notes-caption">
            <label class="form-label" for="Description">Description</label>
        </div>
        <div class="notes-data">
            <input placeholder="Description .." data-val="true" data-val-minlength="Atleast 3 characters are expected" data-val-minlength-min="3" data-val-required="Description required" id="Description" name="Description" rows="5" type="text" value="">
            <span class="field-validation-valid text-danger" data-valmsg-for="Description" data-valmsg-replace="true"></span>
        </div>

        <div class="form-btns">
            <input type="submit" value="Done" class="btn-success">
            <input type="reset" value="Reset" class="btn-reset">
        </div>
    }
    </div>
