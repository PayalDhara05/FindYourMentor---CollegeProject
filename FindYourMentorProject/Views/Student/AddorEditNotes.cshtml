<link href="~/Custom/css/AddorEditNotes.css" rel="stylesheet" />
<div class="notes-container">
    @using (Html.BeginForm("AddorEditNotes", "Student", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
    {
        <input data-val="true" data-val-number="The field NoteID must be a number." data-val-required="The NoteID field is required." id="NoteID" name="NoteID" type="hidden" value="0">

        <div class="notes-caption">
            <label class="form-label" for="Title">Title</label>
        </div>
